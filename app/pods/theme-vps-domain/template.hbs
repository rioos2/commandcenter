<div class="setup-content" id="step-2">
  <p class="sub-title">Select a Domain Name</p>
  <p class="sub-description">You create own domain or uses configured domain name</p>
  {{#unless showEdit}}
    <p class="domain-name">{{domain}}</p>
    {{else}}
      {{input type="text" id="domain" name="field2" placeholder="Type your domain" style="color: #324fcc; font-size: 30px; text-align: center;" value=domain}}
  {{/unless}}
  <div class="domain-edit">
      <img {{action "createDomain"}} src="images/second/edit.png">
    <hr>
  </div>
  <div class="security row">
    <div class="col-xs-9 sec-left p-0">
      <div class="col-xs-9 p-l-30">
        <div class="top-content">
          <p class="sec-title"> TYPE OF KEY TO GENERATE</p>
          <div class="typeofkey">
            <img src="images/second/typeofkey.png">
            <span>Add here tooltip.</span>
          </div>
        </div>
        <div class="m-t-40">
          {{#each secretTypes as |key|}}
            {{theme-key secretType=secretType getSecretType="getSecretType" activate=activate key=key}}
          {{/each}}
        </div>
      </div>
      <div class="col-xs-3">
        <p class="sec-title"> BITS IN KEY</p>
        <div class="bits-key">{{bitsInKey}}</div>
      </div>
    </div>
    <div class="col-xs-3 sec-right p-0">
      {{theme-spinner size=25 condition=showSpinner}}
      {{#unless showSpinner}}
      <img class="generate" {{action 'createSecret'}} src="images/second/generate.png">
      {{/unless}}

    </div>
  </div>
</div>
