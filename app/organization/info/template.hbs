<div class="dashboard">
  <div class="tabs">
   {{#each categories as |category|}}
      {{radio-button checked=(eq category selectedTab) value=selectedTab selection=selectedTab id=category name="tab-control"}}
    {{/each}}
    <ul class="dashboardNav">
      {{#each categories as |category|}}
       {{organization-applications-tab panels=panels selectedTab=selectedTab tab=category}}
      {{/each}}
    </ul>
    <div class="content">
      {{#each panels as |tab|}}
        {{component tab selectedTab=selectedTab all=allStacks fullmodel=fullmodel category=(str-replace tab match="stacks-application-" with="") selectedItem=selectedItem showLoading=showLoading}}
      {{/each}}
    </div>
  </div>
</div>
