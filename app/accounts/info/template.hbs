<div class="user">
    <div class="userinfo">
        <div class="row">
            <div class="col-sm-6 col-md-8 person clearfix">
                {{fa-icon "cog" class="settings"}}
                <img src={{img}}>
                <div class="avata">
                    <p class="name" style="text-transform: capitalize;">{{profile.first_name}}</p>
                    <div class="state {{model.state}}">
                        {{fa-icon "circle"}}
                        <p>{{memberShip}}</p>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-md-4 certification">
                {{svg/svg-hex-certification class="certi-icon"}}
                <p class="certisficated_date">{{createdAt}}</p>
                <p class="certisficated">{{memberShipStatus}}</p>
            </div>
        </div>
    </div>
  <br>
  <div class="dashboard">
  	<div class="tabs">
  		{{radio-button checked=(eq "sessions" selectedTab) value=selectedTab selection=selectedTab id="sessions" name="tab-control"}}
      {{radio-button checked=(eq "events" selectedTab) value=selectedTab selection=selectedTab id="events" name="tab-control"}}
      {{radio-button checked=(eq "notifications" selectedTab) value=selectedTab selection=selectedTab id="notifications" name="tab-control"}}
  		<ul class="dashboardNav">
  			{{profile/profile-tab panels=panels selectedTab=selectedTab tab="sessions"}}
        {{profile/profile-tab panels=panels selectedTab=selectedTab tab="events" }}
  			{{profile/profile-tab panels=panels selectedTab=selectedTab tab="notifications"}}
  		</ul>
  		<div class="slider">
  			<div class="indicator"></div>
  		</div>
  		<div class="content">
  			{{#each panels as |tab|}}
  				{{component tab selectedTab=selectedTab model=model modelSpinner=modelSpinner}}
        {{/each}}
  		</div>
    </div>
  	</div>
</div>
{{page-footer}}
