<div class="home">

  {{!-- Main gauges --}}
  <div id="maingauge" class="main-gauges p-t-50 p-b-50">
    <p class="title p-l-50">
      <span class="underline">{{t 'dashboard.maingaugesFirstSec'}}</span>{{t 'dashboard.maingaugesSecondSec'}}</p>
    <div class="row">
      <div class="col-md-10 col-md-offset-1 col-lg-10 col-lg-offset-1">
        {{infra-health-metriclist model=datacenterUsage}}
      </div>
    </div>
  </div>
  {{!-- Statistics --}}
  <div class="statistics p-t-50 p-b-50">
    <p class="title p-l-50 p-b-20">
      <span class="underline">{{t 'dashboard.statisticsFirstSecNinja'}}</span>{{t 'dashboard.statisticsSecondSecNinja'}}
      <span class="underline">{{t 'dashboard.statisticsFirstSec'}}</span>{{t 'dashboard.statisticsSecondSec'}}</p>
    {{#if hasNinjaStatistics}}
      {{infra-empty-statistics type="ninja" model=healthzModel}}
    {{else}}
      <div class="row list-content">
        {{#each ninjaStatistics as |ninja|}}
          <div class="col-md-6 col-sm-12 list">
            {{infra-node-statistics model=ninja type="ninja" counterModel=healthzModel}}
          </div>
        {{/each}}
      </div>
    {{/if}}
  </div>

  <div class="statistics p-t-50 p-b-50">
    <p class="title p-l-50 p-b-20">
      <span class="underline">{{t 'dashboard.statisticsFirstSecSensei'}}</span>{{t 'dashboard.statisticsSecondSecSensei'}}
      <span class="underline">{{t 'dashboard.statisticsFirstSec'}}</span>{{t 'dashboard.statisticsSecondSec'}}</p>
    {{#if hasSenseiStatistics}}
      {{infra-empty-statistics type="sensei" model=healthzModel}}
    {{else}}
      <div class="row list-content">
        {{#each senseiStatistics as |sensei|}}
          <div class="col-md-6 col-sm-12 list">
            {{infra-sensei-statistics model=sensei type="sensei" counterModel=healthzModel}}
          </div>
        {{/each}}
      </div>
    {{/if}}
  </div>

  {{!-- OS useage by time No horiz error. but not middle. --}}
  <div id="osusage" class="os-useage-bytime p-t-50 p-b-50">
    <p class="title p-l-50 p-b-30">
      <span class="underline">{{t 'dashboard.osUsageFirstSec'}}</span>{{t 'dashboard.osUsageSecondSec'}}</p>
    {{infra-deployedos-visualizelive model=model.healthzDashboard}}
  </div>

</div>
