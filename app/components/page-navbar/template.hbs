<div class="theme-navbar">
  <!-- Fixed navbar -->
  <div class="navbar-wrapper">
    <nav class="navbar navbar-default">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            {{svg/svg-mo-nav-icon class="mo-nav-icon"}}
          </button>
        <img class="nav-left-hex" src="assets/images/navbar/nav_left.png">
        <img class="nav-right-hex" src="assets/images/navbar/nav_right.png">
        {{#link-to "infrastructure-tab.data-center" classNames="mo-logo" }}<img src="assets/images/navbar/logo1.png">{{/link-to}}
        {{#link-to "infrastructure-tab.data-center" classNames="logo" }}<img class="ember-logo" src="assets/images/navbar/logo.png">{{/link-to}}
      </div>
      <div id="navbar" class="navbar-collapse collapse">
        <ul class="nav navbar-nav nav-menu left-menu">
          <li>
            {{#link-to "infrastructure-tab.data-center"}}{{t 'nav.dashboard'}}{{/link-to}}
          </li>
        </ul>
        <ul class="nav navbar-nav nav-menu">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
              {{t 'nav.deploy.title'}}
            </a>
            <ul class="dropdown-menu">
              <li>
                {{#link-to "machines.new"}}{{t 'nav.deploy.digitalcloud'}}{{/link-to}}
              </li>
              <li>
                {{#link-to "containers.new"}}{{t 'nav.deploy.docker'}}{{/link-to}}
              </li>
              <li class="disabled">
                {{#link-to "containers.new"}}{{t 'nav.deploy.application'}}{{/link-to}}
              </li>
            </ul>
          </li>
        </ul>

        <ul class="nav navbar-nav nav-menu left-menu">
          <li>
            {{#link-to "stacks"}}{{t 'nav.manage'}}{{/link-to}}
          </li>
        </ul>

        <ul class="nav navbar-nav navbar-right profile">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle p-b-15" data-toggle="dropdown" role="button">
              <div class="profilehex profilehex1">
                <div class="profilehex-in1">
                  <div class="profilehex-in2"></div>
                </div>
              </div>
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu nav-profile">
              <!-- selected organization -->
              <li>
                  <span class="org-name">{{currentOrganization}}</span>
              <div class='row'>
              </div>
              {{#if currentTeam}}
                <span class="org-team">{{currentTeam}}</span>
                <div class='row'>
                </div>
                {{/if}}
                <span class="org-email">{{email}}</span>
              </li>
              <li role="presentation" class="divider"></li>
              {{#each organizations as |origin|}}
              <li>
                  <a href="#" class="col-sm-9" {{action 'switchOrigin' origin.object_meta.name}}>{{origin.object_meta.name}}</a>
                <span class="col-sm-3">{{#link-to "organization.organization" origin.object_meta.name}}{{fa-icon "fa-pencil"}}{{/link-to}}</span>
              <!-- </div> -->
              </li>
              {{/each}}
              {{#if organizations}}
              <li role="presentation" class="divider"></li>
              {{/if}}
              <!-- Create organization-->
              <li>
               {{#link-to "organization.index"}}{{t 'nav.user.linkOrg'}}{{/link-to}}
              </li>
              <li role="presentation" class="divider"></li>

              <!-- Admin link-->
              {{#if isAdmin}}
              <li>
                 {{#link-to "admin.infra"}} {{t 'nav.admin'}}{{/link-to}}
              </li>
              <li role="presentation" class="divider"></li>
              {{/if}}
              <!-- Account link-->
              <li>
                {{#link-to "accounts.index"}}{{t 'nav.user.profile'}}{{/link-to}}
              </li>
              <!-- Logout action-->
              <li {{action "logout"}}>
               <a href="#">{{t 'nav.user.logout'}}</a>
              </li>
            </ul>
          </li>
        </ul>
        <div class="nav navbar-nav navbar-right svg-news">
          {{svg/svg-news}}
        </div>
        <div class="vr navbar-right"></div>
        <div class="nav navbar-nav navbar-right svg-stats">
          {{svg/svg-nav-stats}}
        </div>
        <div class="vr navbar-right"></div>
        <ul class="nav navbar-nav navbar-right riosearch">
          <li>
            {{fa-icon "search" class="icon-search"}}
            <input class="navbar-search" placeholder="Search">
          </li>
        </ul>

      </div>
    </nav>
  </div>
</div>
