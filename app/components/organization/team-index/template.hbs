{{organization/team-member-invite originName=currentOrigin model=model.team modelSpinner=modelSpinner}}
<div class="filter">
    <div class="row">
        <div class="col-sm-12 col-lg-2">
            <div class="cloud-count">
                {{svg/svg-cloud-count}}
                <label>{{memberCount}} {{t 'nav.team.totalCounts.member'}}</label>
            </div>
        </div>
        <div class="col-sm-12 col-lg-10">
            <div class="row p-r-15">
                <div class="col-sm-2 col-md-2 col-lg-1 filter-text">
                    {{#conditional-loading-spinner condition=showLoading}}
                        <span>{{t 'stackPage.applicationTab.filterBy'}}</span>
                    {{/conditional-loading-spinner}}
                </div>
                <div class="col-sm-10 col-md-10 col-lg-11">
                    <div class="row">
                        {{organization/team-filters model=memberDataContents fullmodel=fullmodel category=group showLoading=showLoading}}
                        {{#if isAdmin}}
                        <div class="col-xs-6 col-sm-4 col-md-3 col-lg-2 push-right">
                            <div class="search-content">
                                <button {{action "inviteMember"}} type="button" class="btn">+ Invite</button>
                            </div>
                        </div>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="cloud-lists row">
  {{#each memberDataContents as |memberDataContent|}}
      <div class="list col-sm-5 col-md-3">
          {{organization/team-member-box originName=currentOrigin model=memberDataContent}}
      </div>
      {{else}}
     {{organization/team-member-box-empty btnName=emptyBtn btnAction="inviteMember"}}
  {{/each}}
</div>
