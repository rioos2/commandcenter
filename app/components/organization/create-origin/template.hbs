<div class="modal fade node_modal" id="addorigin_modal" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content modal-content-create-origin">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">{{t 'nav.organization.create.header'}}</h4>
      </div>
      <div class="modal-body">

          <div class="row">
            <div class="col-sm-12">
              <div class="form-group">
                <label for="origin_name">{{t 'nav.organization.create.nameLable'}}</label> {{input type="text" class="form-control" id="origin_name" value=originName}}
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-12">
              <div class="form-group">
                <label for="default">
                  <span class="note">{{t 'nav.organization.create.orgNoteLabel'}}</span>{{t 'nav.organization.create.orgNote'}}
                </label>
              </div>
            </div>
          </div>
          <button type="submit" {{action 'createOrganization'}} class="btn btn-default">
            {{t 'nav.organization.create.orgAddBtn'}}
            {{#if showSpinner}}
            <i class="fa fa-circle-o-notch fa-spin"></i>
            {{/if}}
          </button>
      </div>
    </div>

  </div>
</div>
