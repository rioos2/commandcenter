<p class="sub-title">{{t 'launcherPage.repo.title'}}</p>
<p class="sub-description">{{t 'launcherPage.repo.subtitle'}}</p>
<p class="domain-name">{{model.buildconfig.spec.source.git.uri}}</p>

<section class="webdesigntuts-workshop">
  {{svg/svg-edit class=(if showIcon "edit-ico" "display-none") click=(action 'clickInputIcon')}}
  <div class= {{if showIcon "display-none" "showform"}}>
    {{input type="text" placeholder=repoPlaceHolder value=repoUrl pattern=urlChecker }}
    <button {{action "setRepoUrl" repoUrl}}>{{t 'launcherPage.domain.buttonSet'}}</button>
  </div>
</section>
