<div class="modal fade rio-default-btn-infra" id="pooladd" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">{{t 'dojos.dashboard.storages.pools.add.title'}}</h4>
      </div>
      <div class="modal-body">
        <form action="/action_page.php">
          {{#if error}}
						<div class="row">
							<div class="col-sm-12">
								<span class="error-page-text"><i class="fa fa-exclamation-circle"></i> {{pageWarning}}</span>
							</div>
						</div>
					{{else}}
          <div class="form-group">
            <label for="poolname">{{t 'generic.name'}} </label> {{input type="text" class="form-control" id="poolname" value=name}}
          </div>
          <div class="form-group">
            <label for="pooldisk">{{t 'dojos.dashboard.storages.disks.subtitle'}}</label>
            <div class="rio-radio mov-top">

              {{#each removeRootPartitions as |key|}}
                <div class="col-xs-6">
                  {{admin-infra/storage-checkbox disk=key type=type updatePoolData="updatePoolData"}}
                </div>
              {{/each}}
            </div>
          </div>
          <div class="col-xs-12">
            <button type="submit" {{action 'createPool'}} class="btn btn-default">
              {{t 'actions.add'}}
              {{#if showSpinner}}
              <i class="fa fa-circle-o-notch fa-spin"></i>
              {{/if}}
            </button>
          </div>
          {{/if}}
        </form>
      </div>
    </div>
  </div>
</div>
