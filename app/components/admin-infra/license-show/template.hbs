<div class="select-domain activate pad-top">
  <p class="sub-title"> {{t 'stackPage.admin.settings.entitlement.rioProduct'}} </p>
  <p class="sub-description">{{t 'stackPage.admin.settings.entitlement.description'}}</p>
  <div class="webdesigntuts-workshop activate">
    {{svg/svg-edit class=(if showIcon "edit-ico" "display-none") click=(action 'clickInputIcon')}}
    <div class= {{if showIcon "display-none" "showform"}}>
      {{input type="text" placeholder=placeHolder value=licenseToken}}
      <button {{action "setLicenseToken" licenseToken}}>{{t 'stackPage.admin.header.active_btn'}}
			{{#if showSpinner}}
			<i class="fa fa-circle-o-notch fa-spin"></i>
			{{/if}}
		</button>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-5">
      <p class="sub-title"> {{t 'stackPage.admin.settings.entitlement.senseiCount'}}</p>
      <p class="sub-description">{{status}}{{expired}}</p>
    </div>
    <div class="col-sm-2">
      {{svg/svg-dots class="dots-ico"}}
    </div>
    <div class="col-sm-5">
      <p class="sub-title">{{t 'stackPage.admin.settings.entitlement.ninjaCount'}}</p>
      <p class="sub-description">{{status}}{{expired}}</p>
    </div>
  </div>
</div>
