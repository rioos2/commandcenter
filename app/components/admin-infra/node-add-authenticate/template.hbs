<div class="modal fade node_discovery node_modal" id="node_auth_modal_{{model.id}}" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">{{t 'stackPage.admin.node.securityVerification'}}</h4>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-sm-6">
            <div class="form-group">
              <select class="form-control" id="node_auth_{{model.id}}" name="node_auth_{{nodeId}}" onchange= {{action "selectAuthType" value="target.value"}}>
                <option disabled selected>{{t 'stackPage.admin.node.selectAuthenticationMethod'}}</option>
                {{#each types as |type|}}
                <option>{{type}}</option>
                {{/each}}
                </select>
            </div>
          </div>
        </div>

        {{#if (eq authType "Login Credentials")}}
        <div class="row">
          <div class="col-sm-6">
            <div class="form-group">
              <label for="nodeusername">{{t 'stackPage.admin.node.nodeAuthUsername'}}</label>
              {{input type="text" class="form-control" id="nodeusername" value=nodeusername}}
            </div>
          </div>
          <div class="col-sm-6">
            <div class="form-group">
              <label for="nodepwd">{{t 'stackPage.admin.node.nodeAuthPassword'}}</label>
              {{input type="password" class="form-control" id="nodepwd" value=nodepwd}}
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-12">
            <div class="form-group">
              <label for="default">
                <span class="note">{{t 'stackPage.admin.node.nodeNote'}}</span>{{t 'stackPage.admin.node.nodeAuthNote'}}
              </label>
            </div>
          </div>
        </div>
        {{/if}}
        {{#if (eq authType "SSH Key Verification")}}
        <div class="row">
          <div class="col-sm-6">
            <div class="form-group">
              <label for="nodeusername">{{t 'stackPage.admin.node.nodeAuthUsername'}}</label>
              {{input type="text" class="form-control" id="nodesshusername" value=nodesshusername}}
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-12">
            <div class="form-group">
              <label for="ssh">{{t 'stackPage.admin.node.nodeSshKey'}}</label>
              {{textarea class="form-control" placeholder=sshplaceholder value=sshvalue cols="80" rows="8"}}
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-12">
            <div class="form-group">
              <label for="default">
                <span class="note">{{t 'stackPage.admin.node.nodeNote'}}</span>{{t 'stackPage.admin.node.nodeAuthNote'}}
              </label>
            </div>
          </div>
        </div>
        {{/if}}

        <button type="submit" {{action 'createSecret'}} class="btn btn-default">
            {{t 'stackPage.admin.node.nodeCreateBtn'}}
            {{#if showSpinner}}
            <i class="fa fa-circle-o-notch fa-spin"></i>
            {{/if}}
          </button>
      </div>
    </div>

  </div>
</div>
