<div class="cluster-detail-container">
  <div class="cluster-detail-box" id="sd_detail1">
    <div class="cluster-active-detail-name">
      {{name}}
    </div>
    <div class="cluster-active-detail-detail">
      <div class="sd-subheader">{{t 'stackPage.admin.locations.detail'}}</div>
      {{#if locationAvaliable}}
        <div class="sd-storage-detail sd-table">
          <div class="sd-title">{{t 'stackPage.admin.locations.storage'}}</div>
          <div class="sd-value">{{selectedStorage}}</div>
        </div>
        <div class="sd-currency-detail sd-table">
          <div class="sd-title">{{t 'stackPage.admin.locations.currency'}}</div>
          <div class="sd-value">{{currency}}</div>
        </div>
        <div class="sd-currency-detail sd-table">
          <div class="sd-title">{{t 'stackPage.admin.locations.status'}}</div>
          <div class="sd-value {{show-status-bulp  status }}">{{status}}</div>
        </div>
      {{else}}
        <div class="sd-empty-pool">{{t 'stackPage.admin.locations.noClusterData'}}</div>
      {{/if}}
    </div>
    <div class="cluster-active-detail-detail">
      <div class="sd-subheader">{{t 'stackPage.admin.network.nodes'}}</div>
      {{#if locationAvaliable}}

        {{#each selectedNodes as |node|}}
          {{admin-infra/network-node node=node }}
        {{/each}}
      {{else}}
        <div class="sd-empty-pool">{{t 'stackPage.admin.locations.noClusterNode'}}</div>
      {{/if}}
    </div>
    <div class="cluster-active-detail-detail">
      <div class="sd-subheader">{{t 'stackPage.admin.locations.network'}}</div>
      {{#if locationAvaliable}}

        {{#each selectedVirtualNetworks as |net|}}
          {{admin-infra/location-network network=net }}
        {{/each}}
      {{else}}
        <div class="sd-empty-pool">{{t 'stackPage.admin.locations.noClusterNetwork'}}</div>
      {{/if}}
    </div>
  </div>
</div>
