<div class="modal fade" id="addstorage_modal" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4 class="modal-title">Add a storage</h4>
    </div>
    <div class="modal-body">
      <form action="#">
          <div class="row">
          <div class="col-sm-6">
            <div class="form-group">
              <label for="modal_st_dropdown">Select Storage</label>
               <select class="form-control" id="modal_st_dropdown" name="modal_st_dropdown">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                </select>
            </div>
            <div class="form-group">
              <label for="modal_st_ip_slocation">IP Address for Sorage location</label>
              <input type="text" class="form-control" id="modal_st_ip_slocation" name="modal_st_ip_slocation">
            </div>
            <div class="form-group">
              <label for="modal_st_auth_password">Auth Password</label>
              <input type="text" class="form-control" id="modal_st_auth_password" name="modal_st_auth_password">
            </div>
          </div>
          <div class="col-sm-6">
            <div class="form-group">
              <label for="modal_st_name">Name</label>
              <input type="text" class="form-control" id="modal_st_name" name="modal_st_name">
            </div>
            <div class="form-group">
              <label for="modal_st_auth_name">Auth Username</label>
              <input type="text" class="form-control" id="modal_st_auth_name" name="modal_st_auth_name">
            </div>
            <div class="form-group">
              <label for="modal_st_pool_name">Pool Name</label>
              <input type="text" class="form-control" id="modal_st_pool_name" name="modal_st_pool_name">
            </div>
          </div>
          </div>
          <button type="submit" class="btn btn-default">Add</button>
      </form>
    </div>
    </div>

  </div>
</div>
