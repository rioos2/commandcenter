<div class="storage-detail-container">
  <div class="storage-detail-box" id="sd_detail1">
    <div class="storage-active-detail-name">
      {{name}}
    </div>
    <div class="storage-active-detail-detail">
      <div class="sd-subheader">{{t 'stackPage.admin.storage.detail'}}</div>
      <div class="sd-ip-detail sd-table">
        <div class="sd-title">{{t 'stackPage.admin.storage.ip'}}</div>
        <div class="sd-value">{{ip}}</div>
      </div>
      <div class="sd-type-detail sd-table">
        <div class="sd-title">{{t 'stackPage.admin.storage.type'}}</div>
        <div class="sd-value">{{type}}</div>
      </div>
      <div class="sd-status-detail sd-table">
        <div class="sd-title">{{t 'stackPage.admin.storage.status'}}</div>
        <div class="sd-value sd-green">{{status}}</div>
      </div>
      <div class="sd-cdate-detail sd-table">
        <div class="sd-title">{{t 'stackPage.admin.storage.createdAt'}}</div>
        <div class="sd-value">{{created}}</div>
      </div>
    </div>
    <div class="storage-active-detail-disks">
      <div class="sd-subheader">{{t 'stackPage.admin.storage.disk.list'}}</div>
      {{#each disks as |disk|}}
        {{admin-infra/storage-disk disk=disk storageData=storageData }}
      {{/each}}
    </div>
  <div class="storage-active-detail-pools">
    <div class="sd-subheader sd-poolhead">{{t 'stackPage.admin.storage.pool.title'}}POOLS</div>
    <div class="sd-link sdpool-link">
      <a href="#pooladd" data-toggle="modal" data-target="#pooladd">{{t 'stackPage.admin.storage.pool.createPool'}}</a></div>
      {{#if count}}
      <div class="sd-empty-pool">{{t 'stackPage.admin.storage.pool.noPool'}}</div>
          {{else}}
          {{#each storagespool as |pool|}}
            {{admin-infra/storage-pool-list pool=pool }}
          {{/each}}
          {{/if}}
  </div>
</div>
</div>
