<div>
<div class="col-xs-8">
<div class="btn-network-group mv-top">
  <button class="{{throuput}}" {{action "packetFliper" "throughput"}}>{{t 'dashboard.throughput'}}</button>
  <button class="{{packetError}}" {{action "packetFliper" "packetError"}}>{{t 'dashboard.errorSwitch'}}</button>
</div>
</div>

<div class="filter">
<div class="col-xs-6 mv-top">
  <div class="select-filter">
    <div class='md-select {{showDropDown}}' {{action "selectFilter" on="click"}}>

      <label for="ul-id">
        <button type="button" class="drop-network">
          <span>{{selectBridge}}</span>
        </button>
      </label>
      <ul role="listbox" class="md-whiteframe-z1" aria-activedescendant="state2_AK" name="ul-id">
        {{#each networkBridge as |opt|}}
            <li role="option" value="{{opt}}" tabindex="-1" {{action "propagateFilter" opt}}>
              {{opt}}
            </li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>
</div>
</div>

<div id="id-{{model.id}}"></div>
