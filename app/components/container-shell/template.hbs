{{#if showProtip}}
  <div class="protip">
    {{t 'containerShell.protip' key=alternateLabel}}
  </div>
  <hr>
{{/if}}
<h2 class='r-mb10'><i class="icon icon-terminal"></i> {{t 'modalShell.title' instanceName=instance.displayName}}</h2>
<div class="shell-body">
</div>
{{#if socketError}}
  <div class="no-vnc">
    <img src="/images/logo2.png" />
  </div>
{{/if}}
<div class="footer-actions">
  {{#if socketError}}
    <div class="console-status text-muted">{{t (concat-str 'containerShell.status' status character='.') error=error}}</div>
  {{/if}}
  {{yield}}
</div>
