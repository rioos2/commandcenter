    <p class="sub-title"> {{t 'launcherPage.network.title'}}</p>
    <div class="row p-t-50">
      {{selectedVirtualNetworks}}
        <div class="col-sm-6 text-center p-b-30">
          {{svg/svg-status class="rio-status-icon"}}

          <p class="title">{{t 'launcherPage.network.type.ipv4'}}</p>

            <div class="rio-selectbtn {{private_ipv4}}">

                <label {{action 'selected' 'private_ipv4'}}>
                  <input type="checkbox" class="option-input radio" checked={{private_ipv4_check}} name="example"/>
                  {{t 'launcherPage.network.type.private'}}
                </label>
            </div>

            <div class="rio-selectbtn {{public_ipv4}}">
              <label {{action 'selected' 'public_ipv4'}}>
                <input type="checkbox" class="option-input radio" checked={{public_ipv4_check}} name="example"/>
                {{t 'launcherPage.network.type.public'}}
              </label>
            </div>
        </div>
        <div class="col-sm-6 text-center p-b-30">
            {{svg/svg-status class="rio-status-icon"}}

            <p class="title">{{t 'launcherPage.network.type.ipv6'}}</p>

              <div class="rio-selectbtn {{private_ipv6}}">

                  <label {{action 'selected' 'private_ipv6'}}>
                    <input type="checkbox" class="option-input radio" checked={{private_ipv6_check}} name="example"/>
                    {{t 'launcherPage.network.type.private'}}
                  </label>
              </div>

              <div class="rio-selectbtn {{public_ipv6}}">
                <label {{action 'selected' 'public_ipv6'}}>
                  <input type="checkbox" class="option-input radio" checked={{public_ipv6_check}} name="example"/>
                  {{t 'launcherPage.network.type.public'}}
                </label>
              </div>
        </div>
    </div>
