<div class="modal fade" id="addnetwork_modal" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">{{t 'dojos.infrastructure.networks.add.title'}}</h4>
      </div>
      <div class="modal-body">
        <form action="#">
          {{#if error}}
						<div class="row">
							<div class="col-sm-12">
								<span class="error-page-text"><i class="fa fa-exclamation-circle"></i> {{pageWarning}}</span>
							</div>
						</div>
					{{else}}
          <div class="row">
            <div class="col-sm-6">
              <div class="form-group">
                <label for="network_name">{{t 'generic.name'}}</label> {{input type="text" class="form-control" id="network_name" value=name}}
              </div>
            </div>
            <div class="col-sm-6">
              <div class="form-group">
                <label for="network_type">{{t 'dojos.infrastructure.networks.details.type'}}</label>
                <select class="form-control" id="modal_cluster_storage" name="modal_cluster_storage" onchange= {{action "protocolSelected" value="target.value"}}>
                                                         <option disabled selected>select</option>
                                                        {{#each virtualNetworks as |virtualNetwork|}}
                                                        <option>{{virtualNetwork}}</option>
                                                        {{/each}}
                                                      </select>
              </div>
            </div>

          </div>
          <div class="row">
            <div class="col-sm-6">
              <div class="form-group">
                <label for="network_gateway">
                  {{t 'dojos.infrastructure.networks.details.gateway'}}
                </label>
                {{input type="text" class=(if hasIpTypeSelected "form-control disabled" "form-control") id="network_gateway" value=gateway}}
              </div>
            </div>
            <div class="col-sm-6">
              <div class="form-group">
                <label for="network_subnetip">
                  {{t 'dojos.infrastructure.networks.details.subnet'}}
                </label>
                {{input type="text" class=(if hasIpTypeSelected "form-control disabled" "form-control") id="network_subnetip" value=subnet}}
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-6">
              <div class="form-group">
                <label for="network_netmask">
                  {{t 'dojos.infrastructure.networks.details.netmask'}}
                </label>
                {{input type="text" class=(if hasIpTypeSelected "form-control disabled" "form-control") id="network_netmask" value=netmask}}
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-12">
              <div class="form-group">
                <label for="network_nodes">{{t 'dojos.infrastructure.networks.details.bridge.select'}}</label>
                <div class="rio-radio mov-top">
                  {{#each bridges as |bridge|}}
                    <div class="col-xs-12">
                      {{dojos/infrastructure/networks/common/node-checkbox name=bridge.name data=bridge updatePoolData="updatePoolData" type=type  setBridge= "bridgesSelected"}}
                    </div>
                  {{/each}}
                </div>
              </div>
            </div>
          </div>
          <button type="submit" {{action 'create'}} class="btn btn-default">
            {{t 'actions.edit'}}
            {{#if showSpinner}}
            <i class="fa fa-circle-o-notch fa-spin"></i>
            {{/if}}
          </button>
          {{/if}}
        </form>
      </div>
    </div>

  </div>
</div>
