{{dojos/infrastructure/networks/edit-or-add-virtual-network nodes=nodes showInnerSpinner=modelSpinner doReload="doReload"}}
<div class="col-sm-9 content-left">
	<div class="panel panel-default kv-panel">
		<div class="panel-heading">
			<div class="panel-header">
				{{t 'dojos.infrastructure.networks.connected'}} ({{availableSize}})
			</div>
			<div class="pull-right kv-right-head-button">
				<button type="button" {{action "openModal"}} class="btn">+ {{t 'actions.add'}}</button>
			</div>
		</div>
		<div class="panel-body">
			{{#if modelSpinner}}
			<div class="spinner infra-spinner">
			{{stack-launch-spinner size=25 showSpinner=true}}
			</div>
			{{else}}
			{{#if virtualNetworkAvailable}}
			<div class="network-container">
				{{#each virtualNetworks as |net|}}
					{{dojos/infrastructure/networks/network-detail model=net nodes=selectedNodes virtualNetwork=virtualNetwork selectedVirtualNetwork=selectedVirtualNetwork click=(action "SideData" net)}}
				{{/each}}
				</div>
			{{else}}
			<div class="empty-network">
				<div class="pin-img">
					<img src="assets/images/admin/3pin.PNG" class="img-responsive" alt="pin">
				</div>
				<div class="empty-network-add-link">
					<span>{{t 'stackPage.admin.network.noNetwork'}}</span>
					<a href="#addnetwork_modal" data-toggle="modal" data-target="#addnetwork_modal">+{{t 'stackPage.admin.network.addNetwork'}}</a>
				</div>
			</div>
			{{/if}}
		{{/if}}
		</div>
	</div>
</div>
<div class="col-sm-3 content-right">
		{{dojos/infrastructure/networks/network-side model=virtualNetwork nodes=selectedNodes allnodes=nodes modelSpinner=modelSpinner virtualNetworkReload="virtualNetworkReload"}}
</div>
