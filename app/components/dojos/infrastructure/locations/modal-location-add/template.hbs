<div class="modal fade rio-default-btn-infra" id="addcluster_modal" role="dialog">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">&times;</button>
				<h4 class="modal-title">{{t 'stackPage.admin.locations.add_title'}}</h4>
			</div>
			<div class="modal-body">
				<form action="#">
					{{#if error}}
						<div class="row">
							<div class="col-sm-12">
								<span class="error-page-text"><i class="fa fa-exclamation-circle"></i> {{pageWarning}}</span>
							</div>
						</div>
					{{else}}
						<div class="row">
							<div class="col-sm-6">
								<div class="form-group">
									<label for="modal_cluster_currency">{{t 'stackPage.admin.locations.add_country'}}</label>
                  {{searchable-select
                     content=filteredCountries
                     sortBy="name.iso"
                     selected=initialCountry
                     on-change=(action "countryChanged")
                     on-search=(action "countryDidChange")}}
								</div>

								<div class="form-group">
									<label for="modal_cluster_storage">{{t 'stackPage.admin.locations.add_select_storage'}}</label>
									<select class="form-control" id="modal_cluster_storag" name="modal_cluster_storage" onchange= {{action "selectStorage" value="target.value"}}>
										 <option disabled selected>{{t 'stackPage.admin.locations.add_select_storage_placeholder'}}</option>
										{{#each storages as |storageName|}}
										<option>{{storageName.name}}</option>
										{{/each}}
										</select>
								</div>
							</div>
							<div class="col-sm-6">
								<div class="form-group">
									<label for="modal_cluster_currency">{{t 'stackPage.admin.locations.add_city'}}</label>
                  {{searchable-select
                     content=filteredCities
                     sortBy="title"
                     prompt="Type a city"
                     searchPrompt	="Atleast 3 chars. eg: Chica "
                     isLoading=isLoadingCity
                     loadingMessage="Searching..."
                     on-change=(action "cityChanged")
                     on-search=(action "cityDidChange")
                     on-close=(action "clearCitySearches")}}
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-sm-12">
								<div class="form-group">
									<div class="col-sm-4">
									<label for="modal_cluster_node">{{t 'stackPage.admin.locations.add_select_node'}}</label>
								</div><div class="col-sm-8">
									<label for="modal_cluster_network">{{t 'stackPage.admin.locations.add_select_network'}}</label>
								</div>	<div class="rio-radio mov-top">
			              {{#each nodes as |node|}}
			                  {{dojos/infrastructure/locations/modal-location-add/cluster-checkbox name=node.name data=node virtualNetworks=virtualNetworks selectedVirtualNetworks=selectedVirtualNetworks updateData="updateNodeData"}}
			              {{/each}}
			            </div>
								</div>
							</div>
						</div>
							<button type="submit" {{action 'createLocation'}} class="btn btn-default">
								{{t 'stackPage.admin.header.add_btn'}}
								{{#if showSpinner}}
								<i class="fa fa-circle-o-notch fa-spin"></i>
								{{/if}}
							</button>
						{{/if}}
					</form>
				</div>
			  </div>

			</div>
		</div>
