<div class="modal fade rio-default-btn-infra" id="addcluster_modal" role="dialog">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal">&times;</button>
				<h4 class="modal-title">{{t 'dojos.infrastructure.locations.add.title'}}</h4>
			</div>
			<div class="modal-body">
				<form action="#">
					{{#if error}}
						<div class="row">
							<div class="col-sm-12">
								<span class="error-page-text"><i class="fa fa-exclamation-circle"></i> {{pageWarning}}</span>
							</div>
						</div>
					{{else}}
						<div class="row">
							<div class="col-sm-6">
								<div class="form-group">
									<label for="modal_cluster_currency">{{t 'dojos.infrastructure.locations.add.country.title'}}</label>
									<select class="form-control" id="modal_cluster_storage" name="country" onchange= {{action "selectCountry" value="target.value"}}>
											</select>
								</div>

								<div class="form-group">
									<label for="modal_cluster_storage">{{t 'dojos.infrastructure.locations.add.storages.title'}}</label>
									<select class="form-control" id="modal_cluster_storag" name="modal_cluster_storage" onchange= {{action "selectStorage" value="target.value"}}>
										 <option disabled selected>{{t 'generic.select'}}</option>
										{{#each storages as |storageName|}}
										<option>{{storageName.name}}</option>
										{{/each}}
										</select>
								</div>
							</div>
							<div class="col-sm-6">
								<div class="form-group">
									<label for="modal_cluster_currency">{{t 'dojos.infrastructure.locations.add.city'}}</label>
									{{#unless selectingCountry}}
										<select class="form-control" id="cities" name="cities" onchange= {{action "selectCity" value="target.value"}}>
								  </select>
									{{/unless}}
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-sm-12">
								<div class="form-group">
									<div class="col-sm-4">
									<label for="modal_cluster_node">{{t 'dojos.infrastructure.locations.add.nodes.title'}}</label>
								</div><div class="col-sm-8">
									<label for="modal_cluster_network">{{t 'dojos.infrastructure.locations.add.network.title'}}</label>
								</div>	<div class="rio-radio mov-top">
			              {{#each nodes as |node|}}
			                  {{dojos/infrastructure/locations/modal-location-add/cluster-checkbox name=node.name data=node virtualNetworks=virtualNetworks selectedVirtualNetworks=selectedVirtualNetworks updateData="updateNodeData"}}
			              {{/each}}
			            </div>
								</div>
							</div>
						</div>
							<button type="submit" {{action 'createLocation'}} class="btn btn-default">
								{{t 'actions.add'}}
								{{#if showSpinner}}
								<i class="fa fa-circle-o-notch fa-spin"></i>
								{{/if}}
							</button>
						{{/if}}
					</form>
				</div>
			  </div>

			</div>
		</div>
