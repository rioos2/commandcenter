<div class="performance-content">
    <p class="sub-title">{{t 'launcherPage.sysConfig.subtitle'}}</p>
    <p class="sub-description">{{t 'launcherPage.sysConfig.description'}}</p>

    <div class="row">
        <div class="col-md-6 cores-content">
            {{createcloud/chart-cores class="chart-cores" model=model initValue=model.stacksfactory.resources.cpu resource=resourceCpu}}
        </div>
        <div class="col-md-6 storage-content">
            <p class="title">Storage Type</p>
            <div class="content">
                {{svg/svg-flash class=(if isSelectedFlash "rio-flash selected" "rio-flash") click=(action "clickFlash")}}
                {{svg/svg-hdd class=(if isSelectedFlash "rio-hdd" "rio-hdd selected") click=(action "clickHDD")}}
                <span class="text-or">or</span>
            </div>
        </div>
    </div>
    <div class="row m-0">
        <div class="col-md-6 ram-content">
            {{createcloud/chart-ram class="chart-ram" model=model initValue=model.stacksfactory.resources.memory resource=resourceMemory}}
        </div>
        <div class="col-md-6 capacity-content">
            {{createcloud/chart-storage class="chart-storage" model=model initValue=model.stacksfactory.resources.storage resource=resourceDisk}}
        </div>
    </div>
</div>
